<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/parentView"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        card_view:elevation="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:src="@drawable/icon_info"
                android:backgroundTint="#c1c1c1"
                android:background="@drawable/drawable_gray_circle"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/hotelNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/bb_darkBackgroundColor"
                    android:text="Hotel Seagull"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/accommodationCategory"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:text="Hotel"/>
                    <android.support.v7.widget.AppCompatRatingBar
                        android:id="@+id/hotelRating"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:numStars="5"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/hotelAddress"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/blackShade"
                    android:textSize="14sp"
                    android:text="Kolatoli beach, Coxbazar"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/icon_right_angle_16"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>


