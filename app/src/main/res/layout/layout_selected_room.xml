<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ffffff"
    app:cardUseCompatPadding="true"
    android:layout_height="70dp">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:clickToClose="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/deleteAccomodation"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#f76363"
                android:gravity="center"
                android:text="Delete"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/roomListParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/availableRooms"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/drawable_gray_circle"
                android:backgroundTint="#949494"
                android:drawableTop="@drawable/icon_community"
                android:gravity="center"
                android:padding="5dp"
                android:text="2"
                android:textColor="#fff"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/accommodationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hotel Coxs Today"
                    android:textColor="@color/bb_darkBackgroundColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/roomTypenQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delux (AC)"
                    android:textColor="@color/bb_darkBackgroundColor"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/occupency"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="2 couple bed"
                        android:textColor="#8e8e8e"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/increaseRoom"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/roomPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="#949494"
                    android:gravity="center"
                    android:text="2000Tk"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/decreaseRoom"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/roomPrice"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:src="@drawable/icon_minus"
                    android:text="--"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp" />

            </RelativeLayout>

        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>


</android.support.v7.widget.CardView>

