<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="?android:attr/actionBarSize"
    tools:context="com.example.olivine.cholodesh.LoginActivity">

        <ImageView
            android:layout_width="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:src="@drawable/bta_logo_3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="center"
                android:layout_gravity="center"
                android:src="@drawable/icon_email"/>
            <EditText
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:inputType="text"
                android:hint="Email or Phone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="center"
                android:layout_gravity="center"
                android:src="@drawable/icon_keys"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:inputType="textPassword"
                android:hint="Password"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/drawable_rounded_black_fill_none"
            android:text="Sign Up"
            android:textColor="@color/blackShade" />

        <TextView
            android:id="@+id/signup_tv"
            android:clickable="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contextClickable="true"
            android:layout_marginTop="30dp"
            android:text="No account yet? Sign up here."
            android:textColor="#61ac48"
            android:textSize="18sp"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>
